{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
  ],
}
